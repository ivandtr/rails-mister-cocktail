<h1>Cocktail#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<%= @cocktail.name %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %> <%= dose.description %> <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: {confirm: "Are you sure?"} %>
  </li>
<% end %>
</ul>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, class: "select2" %>
  <%= f.submit "Add ingredient", class: "btn btn-primary" %>
<% end %>
<select class="select2" name="country">
  <option value="AL">Alabama</option>
  <option value="AL">Alabty</option>
  <option value="WY">Wyoming</option>
</select>

