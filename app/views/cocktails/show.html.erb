<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<%= @cocktail.name %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %> <%= dose.description %> <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: {confirm: "Are you sure?"} %>
  </li>
<% end %>
  <li><%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %></li>
</ul>


